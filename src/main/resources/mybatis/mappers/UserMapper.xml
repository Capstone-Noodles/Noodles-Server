<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="capston.noodles.users.mapper.UserMapper">
    <insert id="save"  parameterType="capston.noodles.users.model.dao.User">
        Insert into UserInfo (identification, password, phoneNumber, nickname)
        values(#{identification}, #{password}, #{phoneNumber}, #{nickname})
    </insert>
</mapper>

